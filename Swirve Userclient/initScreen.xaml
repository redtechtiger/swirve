<Window x:Class="Swirve_Userclient.initScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Swirve_Userclient"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Title="initScreen" Height="226" Width="447" ResizeMode="NoResize" Loaded="Window_Loaded" FontFamily="OCR A Extended" WindowStyle="None" WindowStartupLocation="CenterScreen" Background="{x:Null}">

    <Grid MouseDown="Grid_MouseDown">
        <Border CornerRadius="15" Background="White"/>
        <MediaElement Margin="15" x:Name="Swirve_Splash" Source="Swirve_Splash.mp4" Stretch="Fill" ScrubbingEnabled="True" UnloadedBehavior="Play" MediaEnded="Swirve_Splash_MediaEnded" />
        <Label x:Name="versionNumber" Content="Devbuild 0.0.0" HorizontalAlignment="Left" Margin="0,201,0,0" VerticalAlignment="Top" Foreground="Gray" Height="25" Width="337" FontFamily="Segoe UI"/>
        <Label x:Name="workDescriptor" Content="Loading..." Visibility="Hidden" VerticalAlignment="Bottom" Margin="0,50" HorizontalAlignment="Center" FontFamily="Segoe UI" Foreground="Gray" HorizontalContentAlignment="Center" FontSize="15"/>
    </Grid>
</Window>
